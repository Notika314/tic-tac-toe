	</tr>
</table>

<h2>ALL GAMES:</h2>
<% @games.each do |game| %>
	<h3>Play with <%= game.player1.username %> </h3>
	<form id="join_game" action="/games/<%= game.id %>" method="POST">
		<input type="hidden" name="_method" value="PUT" />
		<input type="submit" value="JOIN" />
	</form>
<% end %>

